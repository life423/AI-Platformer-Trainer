//write a launch.json file that runs main.py 

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "../src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Main",
            "type": "../src/main.py",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        }
    ]
}